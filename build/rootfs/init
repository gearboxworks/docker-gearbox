#!/bin/bash

# Important for passing environment through for SSH.
env | awk -F= '
$1~/^HOSTNAME$/||$1~/^PWD$/||$1~/^HOME$/||$1~/^SHLVL$/||$1~/^PATH$/||$1~/^_$/{next}
{print$1"=\x27"$2"\x27; export "$1}
' | sort > /etc/environment
cp /etc/environment /etc/profile.d/00-gearbox.sh
env | sort > /etc/environment-NATIVE

test -f /etc/gearbox/bin/colors.sh && . /etc/gearbox/bin/colors.sh

c_info "Starting S6 init"
exec /bin/s6-svscan /etc/gearbox/services
